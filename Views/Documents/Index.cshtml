@model IEnumerable<Document_Repo_Final_Project.Models.Document>

@{
    ViewData["Title"] = "Index";
}

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

@if (User.IsInRole("publisher"))
{

    <h1>My Documents</h1>

}
else
{

    <h1>All Documents</h1>
}
<h5>Click on Details to view or download file </h5>

@if (User.IsInRole("publisher"))
{
    <p>
        <a class="btn btn-outline-secondary" asp-action="Create">+ Add Document</a>
    </p>
}
<table class="table table-bordered table-striped table-secondary" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DocumentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified)
                </td>
                <td>
                    <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-outline-secondary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
